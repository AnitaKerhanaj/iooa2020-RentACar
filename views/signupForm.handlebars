<div class="container card text-white bg-dark mb-3 card border-dark mb-3" style="max-width: 25rem;">
    <div class="row">
        <div class="col-sm"></div>
        <div class="col-sm-8">
        <form action="/signup" method="POST">
        {{#each errors}}
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {{text}}
        </div>
        {{/each}}
            <div class="form-group">
                <label for="firstname">Ime</label>
                <input type="text" name="firstname" value="{{firstname}}" id="firstname"  class="form-control" required >
            </div>
            <div class="form-group">
                <label for="lastname">Prezime</label>
                <input type="text" name="lastname" value="{{lastname}}" id="lastname"  class="form-control" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" value="{{email}}" id="email"  class="form-control" requiredv>
            </div>
            <div class="form-group">
                <label for="password">Lozinka</label>
                <input type="password" name="password" value="{{password}}" id="password"  class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password2">Potvrdi lozinku</label>
                <input type="password" name="password2" value="{{password2}}" id="password2"  class="form-control" required>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Registriraj se</button>
            </div>
            </form>
        </div>
        <div class="col-sm"></div>
    </div>
</div>