{{#each cars}}
<div class="media">
  <img src={{owner.image}} class="mr-3"  width="64px" height="64px">
  <div class="media-body">
    <h5 class="mt-0">{{make}} {{model}} {{year}}</h5>
    <div class="row">
        {{#each image}}
        <div class="col-sm">
            <img src="{{imageUrl}}" class="img-fluid" width="300px;" height="auto">
        </div>
        {{else}}
        <img src="/image/logo.png" alt="">
        {{/each}}
    </div>
    <p><u>{{pricePerHour}}</u> kn po satu</p>
    <p><u>{{pricePerWeek}}</u> kn po tjednu</p>
    <small>{{location}}</small>
    <small>{{date}}</small>
    
  </div>
</div>
<hr>
{{else}}
<p>No car found</p>
{{/each}}